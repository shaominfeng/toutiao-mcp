# 今日头条 MCP 服务器环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ==================== 日志配置 ====================

# 日志级别 (error|warn|info|debug)
LOG_LEVEL=info

# 日志目录
LOG_DIR=./logs

# 是否启用控制台日志输出
ENABLE_CONSOLE_LOG=true

# 是否启用文件日志输出
ENABLE_FILE_LOG=true

# ==================== Cookie 加密 ====================

# Cookie 加密密钥（必须设置！建议至少 32 字符的强密码）
# 警告：更改此密钥会导致现有 Cookie 无法解密
COOKIE_ENCRYPTION_KEY=your-secure-password-at-least-32-characters-long

# ==================== Selenium 配置 ====================

# 是否使用无头模式（true 不显示浏览器窗口）
SELENIUM_HEADLESS=false

# 隐式等待时间（毫秒）
SELENIUM_IMPLICIT_WAIT=10000

# 显式等待时间（毫秒）
SELENIUM_EXPLICIT_WAIT=30000

# ==================== 内容发布配置 ====================

# 图片最大大小（字节）
MAX_IMAGE_SIZE=1048576

# 图片质量 (1-100)
IMAGE_QUALITY=85

# 默认分类
DEFAULT_CATEGORY=科技

# ==================== AI 集成配置 (可选) ====================

# Anthropic API Key（用于 AI 内容生成）
ANTHROPIC_API_KEY=sk-ant-xxx

# ==================== 其他配置 ====================

# Node 环境
NODE_ENV=development

# MCP 服务器名称
MCP_SERVER_NAME=toutiao-mcp-server
